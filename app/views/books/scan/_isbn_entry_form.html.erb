<%= form_with url: book_lookups_isbn_path, method: "post", data: { turbo_stream: true } do |form| %>
  <div>
    <%= form.label :isbn, "ISBN", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :isbn, placeholder: "978-0-00-000000-0", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>
  <%= form.submit "Get Details for ISBN Manually" %>
<% end %>
