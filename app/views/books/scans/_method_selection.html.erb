<%# Step 1: Choose identification method %>
<div class="space-y-6">
  <p class="text-gray-600">How would you like to add your book?</p>

  <div class="grid gap-4 md:grid-cols-2">
    <%# Barcode Scanner Option %>
    <%= link_to books_scans_barcode_path,
                data: { turbo_frame: "scan_step", turbo_action: "advance" },
                class: "flex flex-col items-center p-6 border-2 border-gray-200 rounded-lg hover:border-blue-500 hover:bg-blue-50 transition-colors" do %>
      <%= heroicon "qr-code", options: { class: "w-12 h-12 text-gray-600 mb-3" } %>
      <span class="font-medium text-gray-900">Scan Barcode</span>
      <span class="text-sm text-gray-500 mt-1">Use your camera to scan the ISBN barcode</span>
    <% end %>

    <%# Photo Option %>
    <%= link_to books_scans_photo_path,
                data: { turbo_frame: "scan_step", turbo_action: "advance" },
                class: "flex flex-col items-center p-6 border-2 border-gray-200 rounded-lg hover:border-blue-500 hover:bg-blue-50 transition-colors" do %>
      <%= heroicon "camera", options: { class: "w-12 h-12 text-gray-600 mb-3" } %>
      <span class="font-medium text-gray-900">Take Photo</span>
      <span class="text-sm text-gray-500 mt-1">Take a photo of the cover or title page</span>
    <% end %>
  </div>

  <%= render partial: "books/scans/manual_entry_prompt" %>
</div>
